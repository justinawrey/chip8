{
  "tasks": {
    "clean": "rm -rf static/dist",
    "bundle": "mkdir -p static/dist && deno bundle src/main.ts static/dist/chip8.bundle.js",
    "build": "deno task clean && deno task bundle",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.161.0/http/file_server.ts static",
    "dev": "deno task bundle --watch & deno task serve"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "deno.ns"
    ]
  }
}
